<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#646FD4">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index">
                     <img src="https://cdn.icon-icons.com/icons2/1474/PNG/512/icons8consumerelectronics_101574.png" alt=".." height="28"> 
                     Electronics - ADMIN</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Home/Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Products</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ml-auto">
                            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Index">Log In</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-auto">
                            <a class="nav-link text-dark" asp-controller="Auth" asp-action="LogOut">Log Out</a>
                            </li>

                            <li class="nav-item">
                            <a class="nav-link text-dark">@User.Identity.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div  class="min-vh-100">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
   <footer>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#646FD4">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item mx-auto">
                    <a class="nav-link text-dark">Facebook</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark">Instagram</a>
                </li>
                <li class="nav-item ml-auto">
                    <a class="nav-link text-dark disabled">&copy; 2022 - Electronics</a>
                </li>
            </ul>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
