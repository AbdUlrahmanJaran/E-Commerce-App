@model Electronics.Auth.Model.DTO.LoginDTO

<h4 style="text-align:center">Admin Login</h4>
<section class="vh-100">
  <div class="container py-5">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form  method="post" asp-action="Login">
          <div class="form-outline mb-4">
            <label asp-for="Username" class="form-label">User Name</label>
            <input asp-for="Username" type="text" class="form-control form-control-lg" />
            <span asp-validation-for="Username" class="text-danger"></span>
          </div>
          <div class="form-outline mb-4">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control form-control-lg" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div asp-validation-summary="@ValidationSummary.ModelOnly" class="text-danger"></div>

          <div class="form-group">
              <input type="submit" value="Login" class="btn btn-primary btn-lg btn-block"/>
          </div>
        </form>
      </div>
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://cdn.mos.cms.futurecdn.net/uWjEogFLUTBc8mSvagdiuP.jpg"
          class="img-fluid" alt="image">
      </div>
    </div>
  </div>
</section>