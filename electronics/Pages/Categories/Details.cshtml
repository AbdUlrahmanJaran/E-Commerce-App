@page
@model Electronics.Pages.Categories.DetailsModel
@{
}
<div>
    <h2>@Model.category.Name</h2>
    <h3>@Model.category.Info</h3>
    <hr />      
@foreach (var product in @Model.Products)
    {
        <div class="card" style="width: 18rem;">
          <img style="width: 100px" src=@product.URL class="card-img-top" alt="...">

          <div class="card-body">
                <h5 class="card-title"> @product.SubName </h5>
                <p class="card-text"> @product.MakerName </p>
                <a asp-page="/Products/Index" asp-route-id="@product.Id">Details</a>  
          </div>
        </div>
    }
</div>