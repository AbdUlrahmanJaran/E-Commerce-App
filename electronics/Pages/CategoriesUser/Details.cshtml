@page
@model Electronics.Pages.CategoriesUser.DetailsModel
@{
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div>
    <h2>@Model.category.Name</h2>
    <h3>@Model.category.Info</h3>
    <hr />      
    @if (@Model.Products != null)
   {
        @foreach (var product in @Model.Products)
    {
        <div class="card" style="width: 18rem;">
          <img style="width: 100px" src="@product.URL" class="card-img-top" alt="...">

          <div class="card-body">
                <h5 class="card-title"> @product.SubName </h5>
                <p class="card-text"> @product.MakerName </p>
                <a asp-page="/Products/Index" asp-route-id="@product.Id">Details</a>  
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post">
                    <input hidden type="number" name="productId" value="@product.Id" />
                        <button tybe="submit">Add To Cart</button>
                    <i class="bi bi-cart-dash"></i>
                    </form>
                }
          </div>
        </div>
    }
   }
   
</div>